{
    "manifest_version": 3,
    "name": "Trial",
    "version": "1.0.0",
    "description": "Your free trial for the web. Generate disposable identities and emails.",
    "permissions": [
        "storage",
        "scripting",
        "contextMenus",
        "alarms"
    ],
    "host_permissions": [
        "https://api.mail.tm/*"
    ],
    "background": {
        "service_worker": "src/background/service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_title": "Trial"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/content.js"
            ]
        }
    ],
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/icon48.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}