{
  "manifest_version": 3,
  "name": "Trial",
  "version": "1.0.0",
  "description": "Your free trial for the web. Generate disposable identities and emails.",
  "permissions": [
    "storage",
    "scripting",
    "contextMenus",
    "alarms"
  ],
  "host_permissions": [
    "https://www.1secmail.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Trial"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
